---
import { supportedLanguages, languageFlags, languageNames, localizePath, getLanguageFromPath, getBasePath } from '../i18n/config';

interface Props {
  currentPath: string;
  currentLang: string;
}

const { currentPath, currentLang } = Astro.props;
const base = getBasePath();
---

<div class="relative group">
  <button
    class="flex items-center gap-2 px-3 py-2 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors font-medium"
    aria-label="Switch language"
  >
    <span class="text-xl">{languageFlags[currentLang as keyof typeof languageFlags] || 'üåê'}</span>
    <span class="hidden sm:inline">{languageNames[currentLang as keyof typeof languageNames] || 'Language'}</span>
    <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>

  <div class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
    <div class="py-2">
      {
        supportedLanguages.map(lang => (
          <a
            href={`${base}${localizePath(currentPath, lang)}`}
            class={`flex items-center gap-3 px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors ${
              lang === currentLang ? 'bg-blue-50 dark:bg-blue-900/20 font-semibold' : ''
            }`}
          >
            <span class="text-xl">{languageFlags[lang]}</span>
            <span>{languageNames[lang]}</span>
            {lang === currentLang && (
              <svg class="w-4 h-4 ml-auto text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
            )}
          </a>
        ))
      }
    </div>
  </div>
</div>
