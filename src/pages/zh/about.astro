---
import AboutHeroImage from '../../assets/blog-placeholder-about.jpg';
import Layout from '../../layouts/BlogPost.astro';
import { useTranslations, getLanguageFromPath, getBasePath, type SupportedLanguage } from '../../i18n'

const currentLang: SupportedLanguage = 'zh';
const currentPath = Astro.url.pathname;
const base = getBasePath();
const { t } = useTranslations(currentLang);
---

<Layout
	title={t('about.title')}
	description={t('about.description')}
	pubDate={new Date('August 08 2021')}
	heroImage={AboutHeroImage}
	currentPath={currentPath}
	currentLang={currentLang}
>
	<h2 id="about" class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">{t('about.aboutHeading')}</h2>
	<p>
		{t('about.aboutText1')}
	</p>
	<p>
		{t('about.aboutText2')}
	</p>

	<h2 id="skills" class="text-2xl font-bold mb-4 mt-8 text-gray-900 dark:text-gray-100">{t('about.skillsHeading')}</h2>
	<p class="text-gray-700 dark:text-gray-300">{t('about.skills')}</p>

	<h2 id="contact" class="text-2xl font-bold mb-4 mt-8 text-gray-900 dark:text-gray-100">{t('about.contactHeading')}</h2>
	<p class="mb-4">
		{t('about.contactText')}
	</p>
	<div class="flex flex-wrap gap-4">
		<a
			href="https://github.com/basiten"
			target="_blank"
			rel="noopener noreferrer"
			class="inline-flex items-center gap-2 px-4 py-2 bg-gray-900 dark:bg-gray-700 text-white rounded-lg hover:bg-gray-800 dark:hover:bg-gray-600 transition-colors"
		>
			<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
				<path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
			</svg>
			{t('about.github')}
		</a>
		<a
			href="mailto:sun_bastien@163.com"
			class="inline-flex items-center gap-2 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors"
		>
			<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
			</svg>
			{t('about.email')}
		</a>
	</div>
</Layout>